# Production Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
VITE_APP_NAME=Nexus Training Pro
VITE_APP_URL=https://your-domain.com
VITE_CONTACT_EMAIL=info@kaisanassociates.com
VITE_CONTACT_PHONE=+971501234567

# Supabase Configuration (Optional - for advanced features)
# Leave empty to use local data files
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Payment Configuration (Razorpay)
VITE_RAZORPAY_KEY_ID=your-razorpay-key-id
VITE_RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Email Configuration
VITE_EMAIL_SERVICE=gmail
VITE_EMAIL_USER=your-email@gmail.com
VITE_EMAIL_PASSWORD=your-app-password

# Storage Configuration (Local - No S3 required)
VITE_STORAGE_TYPE=local
VITE_UPLOAD_PATH=/var/www/html/uploads

# Security Settings
VITE_JWT_SECRET=your-jwt-secret-key
VITE_ENCRYPTION_KEY=your-encryption-key

# Development Settings (Set to false in production)
VITE_DEBUG=false
VITE_MOCK_PAYMENTS=false